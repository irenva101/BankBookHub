@{
    Layout = "_Layout";
}

<style>
    .cart-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin-top: 20px;
    }

    .cart-items {
        width: 100%;
        max-width: 800px;
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .cart-item {
        display: flex;
        justify-content: space-between;
        padding: 10px 0;
        border-bottom: 1px solid #eee;
    }

        .cart-item:last-child {
            border-bottom: none;
        }

    .total-sum {
        font-size: 1.5rem;
        font-weight: bold;
        margin-top: 20px;
    }

    .btn-buy {
        margin-top: 20px;
        background-color: #9F2B68;
        color: white;
        border: none;
    }

        .btn-buy:hover {
            background-color: #7F1F54;
            color: white;
        }

    .cart-table {
        width: 100%;
        border-collapse: collapse;
    }

        .cart-table th, .cart-table td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #eee;
        }

    }
</style>


@model IEnumerable<Common.Models.CartItem>
<div class="cart-container">
    <h2 class="mb-4" style="color: #9F2B68;">Shopping Cart</h2> <div class="cart-items">
        <table class="cart-table">
            <thead> <tr> <th>Title</th> <th>Price</th> <th>Quantity</th> </tr> </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr> <td>@item.Book.Title</td> <td>$@item.Book.Price</td> <td>@item.Quantity</td> </tr>
                }
            </tbody>
        </table>
    </div> <div class="total-sum"> Total: $@Model.Sum(item => item.Book.Price * item.Quantity) </div> 
    @using (Html.BeginForm("Buy", "Home", FormMethod.Post))
    {
        <button class="btn btn-buy">Buy</button>
    }
</div>
    </div>
